@using App.MVC.Models.Forms
@{
    ViewData["Title"] = "Register";
}

<!-- Login Form-->
<div class="d-flex flex-column w-100 align-items-center">

    <!-- Logo-->

    <div class="shadow-lg rounded p-4 p-sm-5 bg-white form">
        <h5 class="fw-bold text-muted">Login</h5>
        <p class="text-muted">Welcome!</p>
        @using (Html.BeginForm("RegisterUser", "Register", FormMethod.Post))
        {

            @Html.AntiForgeryToken()
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" role="alert">
                    @Html.ValidationSummary(true, "", new { })
                </div>
            }

            <!-- Register Form-->
            <div class="form-group">
                <label class="form-label form-label-light" for="name">Full Name</label>
                <input type="text" class="form-control form-control-light" id="name" name="name" placeholder="name">
            </div>
            <div class="form-group">
                <label class="form-label form-label-light" for="Birtdate">Birth date</label>
                <input type="date" class="form-control form-control-light" id="birtdate" name="birthdate" placeholder="01/01/2000">
            </div>
            <div class="form-group">
                <label class="form-label form-label-light" for="email">Email address</label>
                <input type="email" class="form-control form-control-light" id="email" name="email" placeholder="name@email.com">
            </div>
            <div class="form-group">
                <label class="form-label form-label-light" for="password">Password</label>
                <input type="password" class="form-control form-control-light" id="password" name="password" placeholder="Enter your password">
            </div>
            <button type="submit" class="btn btn-primary d-block w-100 my-4">Register</button>
            <!-- / Register Form -->
        }
    </div>
</div>