@using App.MVC.DTOs
@using App.MVC.Models.Forms
@model RegisterBookForm
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_LayoutLogged";
}

@using (Html.BeginForm("AddBook", "Dashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger" role="alert">
            @Html.ValidationSummary(true, "", new { })
        </div>
    }
    <div class="card mb-4">
        <div class="card-header justify-content-between align-items-center d-flex">
            <h6 class="card-title m-0">Add book</h6>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label for="Title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Eg:Pride and Prejudice">
            </div>
            <div class="mb-3">
                <label for="author" class="form-label">Author</label>
                <input type="text" class="form-control" id="author" name="author" placeholder="Eg: Jane Austen">
            </div>
            <div class="mb-3">
                <label for="publisher" class="form-label">Publisher</label>
                <input type="text" class="form-control" id="publisher" name="publisher" placeholder="Eg: Whitehall">
            </div>
            <div class="mb-3">
                <label for="Genre" class="form-label">Genre</label>
                <select class="form-select form-select-sm mb-3" name="genre" id="genre" aria-label=".form-select-sm example">
                    <option disabled selected>Select a Genre</option>
                    <optgroup label="Fiction">
                        <option value="1">Fantasy</option>
                        <option value="2">Science Fiction</option>
                        <option value="3">Horror</option>
                        <option value="4">Mystery</option>
                        <option value="5">Romance</option>
                        <option value="6">Historical Fiction</option>
                        <option value="7">Adventure</option>
                        <option value="8">Dystopian</option>
                        <option value="9">Literary Fiction</option>
                        <option value="10">Young Adult</option>
                        <option value="11">Short Story</option>
                    </optgroup>
                    <optgroup label="Nonfiction">
                        <option value="12">Biography</option>
                        <option value="13">Autobiography</option>
                        <option value="14">History</option>
                        <option value="15">Cookbooks</option>
                        <option value="16">Art & Photography</option>
                        <option value="17">Health and Fitness</option>
                        <option value="18">Self-Help</option>
                        <option value="19">Children's</option>
                        <option value="20">Crafts & Hobbies</option>
                    </optgroup>
                </select>
            </div>
            <div class="mb-3">
                <label for="isbn" class="form-label">ISBN</label>
                <input type="number" class="form-control" id="isbn" name="isbn" placeholder="Eg: 9780582419353">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" id="description" name="description" placeholder="Eg: Pride and Prejudice is the second novel by English author Jane Austen, published in 1813..."></textarea>
            </div>
            <div class="mb-3">
                <label for="file" class="form-label">Book Cover</label>
                <input type="file" class="form-control" id="File" name="File" accept=".png,.jpg,.jpeg" />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
}

